# BlickTrack Frontend Environment Variables
# Copy this file to .env.local and fill in your actual values

# SMTP Email Configuration (Required for OTP email verification)
SMTP_HOST=smtp.strato.de
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@blicktrack.com
SMTP_PASS=your_smtp_password_here
SMTP_FROM="Blick Track Security" <noreply@blicktrack.com>

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# Database Configuration (if needed for frontend API routes)
DATABASE_URL=postgresql://username:password@localhost:5432/blicktrack

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# Security Configuration
CSRF_SECRET=your_csrf_secret_here
SESSION_SECRET=your_session_secret_here

# Optional: External Service Keys
# SENDGRID_API_KEY=your_sendgrid_key_here
# AWS_SES_ACCESS_KEY=your_aws_access_key_here
# AWS_SES_SECRET_KEY=your_aws_secret_key_here
