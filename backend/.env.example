# BlickTrack Environment Configuration
# =================================

# Database Configuration
DATABASE_URL="postgresql://blicktrack_admin:BlickTrack@2024!@localhost:5432/blicktrack_dev"
POSTGRES_DB=blicktrack_dev
POSTGRES_USER=blicktrack_admin
POSTGRES_PASSWORD=BlickTrack@2024!

# Redis Configuration (optional)
REDIS_URL="redis://localhost:6379"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production-2024"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production-2024"
JWT_REFRESH_EXPIRES_IN="30d"

# Application Configuration
NODE_ENV=development
PORT=3001
APP_NAME="BlickTrack"
APP_VERSION="1.0.0"

# CORS Configuration
FRONTEND_URL="http://localhost:3000"
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# Email Configuration (for production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_PATH="./uploads"

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Audit Configuration
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years
ENABLE_REQUEST_LOGGING=true

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_COMPRESSION=true
ENABLE_HELMET=true

# Development Tools
PRISMA_STUDIO_PORT=5555
PGADMIN_EMAIL=admin@blicktrack.com
PGADMIN_PASSWORD=BlickTrack@Admin2024!